<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/EstiloContenedorPrincipal"
    tools:context=".ui.lugares.InformacionDireccionFragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/EstiloTitulos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"/>

            <ImageView
                android:id="@+id/imagenReferencia"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:src="@tools:sample/avatars" />

            <androidx.camera.view.PreviewView
                android:id="@+id/viewFinder"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="invisible"/>

            <TextView
                style="@style/EstiloSubTitulosContenido"
                android:text="@string/sub_titulo_informacion_lugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/lbl_hora_inicio"
                    style="@style/EstiloLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtHoraEntrada"
                    android:text=""
                    style="@style/EstiloContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/lbl_hora_inicio_real"
                    style="@style/EstiloLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtHoraEntradaReal"
                    android:text=""
                    style="@style/EstiloContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/lbl_hora_fin"
                    style="@style/EstiloLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtHoraFin"
                    android:text=""
                    style="@style/EstiloContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/lbl_hora_fin_real"
                    style="@style/EstiloLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtHoraFinReal"
                    android:text=""
                    style="@style/EstiloContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/lbl_lugar"
                    style="@style/EstiloLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtNombreLugar"
                    android:text=""
                    style="@style/EstiloContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="3"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/lbl_ubicacion"
                    style="@style/EstiloLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="3"/>

                <TextView
                    android:id="@+id/txtUbicacion"
                    android:text=""
                    style="@style/EstiloContenido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="3"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnTomarBiometria"
                style="@style/EstiloBotones"
                android:text="@string/btn_tomar_biometria"
                android:layout_marginTop="15dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:layout_marginBottom="50dp"
                android:layout_weight="2"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>