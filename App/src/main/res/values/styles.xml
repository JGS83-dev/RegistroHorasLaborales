<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloTitulos" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#6C6F7F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="EstiloBotones" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#5C6672</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EstiloContenedorPrincipal" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorBackgroundApp</item>
    </style>

    <style name="EstiloSubTitulos" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">#6C6F7F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EstiloSubTitulosContenido" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">left</item>

    </style>

    <style name="EstiloLabels" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EstiloContenido" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>